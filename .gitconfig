[user]
    name = Cloud Chen
    email = cloudcmh@gmail.com
[push]
    default = simple
[color]
    ui = true
[help]
    autocorrect = 1
[core]
    excludesfile = ~/.gitignore
    pager = cat
    editor = vim
[mergetool]
    keepBackup = true
[alias]
    st = status
    s = status -sb
    co = checkout
    ds = diff --cached
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[log]
    abbrevCommit = true
[branch]
    autosetuprebase = always
